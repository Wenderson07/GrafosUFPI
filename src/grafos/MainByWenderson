package grafos;

import java.util.Date;
import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Gerador gerador = new Gerador();
		Date d1 = new Date();
		//Graph newGraph = gerador.carregarArquivo();
		Date d2 = new Date();
		//newGraph.Print();
		//g.salvarGrafoTxt(newGraph);
		Date d3 = new Date();
		
		
		//Interface simples
		int vertices =0;
		Scanner scan = new Scanner(System.in);
        System.out.println("Digite o numero de vertices: ");
        vertices = scan.nextInt();
        int[][] matrizAux = new int[vertices+1][vertices+1];
        System.out.println("Digite a matriz de pesos do grafo");
        for (int i = 0;i < vertices; i++){
            for (int j = 0;j < vertices; j++){
            	int peso = scan.nextInt();
                if (i == j){
                	matrizAux[i][j] = 0;
                    continue;
                }else{
                	matrizAux[i][j] = peso;
                	matrizAux[j][i] = matrizAux[i][j];
                } 
            }
        }
        //System.out.println("Selecione o algoritmo para A.G.M : ");
        scan.close();
        Graph grafo =gerador.gerarGrafo(vertices, matrizAux);
        gerador.salvarGrafoTxt(grafo);
		grafo.Print();
		System.out.println("Generation time: " + (d2.getTime() - d1.getTime()) + " ms");
		System.out.println("Printing time: " + (d3.getTime() - d2.getTime()) + " ms");
		System.out.println("Full time: " + (d3.getTime() - d1.getTime()) + " ms");
		
	}
}
